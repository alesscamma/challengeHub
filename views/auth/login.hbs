<div id="signup-login" class="text-center">
  <form action="/login" method="POST" class="form-signup-login">
    <img class="mb-4" src="/images/logo-square.svg" alt="Challenge Hub Logo" width="72" height="72">
    <h2>Login</h2>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

    <label for="input-email"></label>
    <input type="email" id="input-email" class="form-control" name="email" placeholder="Your email" />

    <label for="input-password"></label>
    <input type="password" name="password" id="input-password" class="form-control" placeholder="********" />

    <button type="submit" class="get-started-btn signup-login-btn">Login</button>

  </form>
</div>