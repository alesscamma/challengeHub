<h2 class="text-center">Create a new challenge</h2>
<div>
    <p>Fields marked with * are required</p>
    <form action="/challenges/new" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Category: *</label>
            <div class="col-sm-10">
                <label class="checkbox-container select-container">Education
                    <input type="checkbox" id="education" name="category" value="Education">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Sports
                    <input type="checkbox" id="sports" name="category" value="Sports">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Arts
                    <input type="checkbox" id="arts" name="category" value="Arts">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Entertainment
                    <input type="checkbox" id="entertainment" name="category" value="Entertainment">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Self-care
                    <input type="checkbox" id="self-care" name="category" value="Self-care">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Health
                    <input type="checkbox" id="health" name="category" value="Health">
                    <span class="checkmark"></span>
                </label>
                <label class="checkbox-container select-container">Other
                    <input type="checkbox" id="other" name="category" value="Other">
                    <span class="checkmark"></span>
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Time: *</label>
            <div class="col-sm-10">
                <div>
                <input type="number" class="form-control" id="time-number" name="timeNumber" placeholder="Insert a number" required>
                </div>
                <div class="custom-control-inline time-format-selection">
                    <label class="radio-container select-container">Days
                        <input type="radio" id="time-days" name="timeFormat" value="Days">
                        <span class="radiomark"></span>
                    </label>
                    <label class="radio-container select-container">Weeks
                        <input type="radio" id="time-weeks" name="timeFormat" value="Weeks">
                        <span class="radiomark"></span>
                    </label>
                    <label class="radio-container select-container">Months
                        <input type="radio" id="time-months" name="timeFormat" value="Months">
                        <span class="radiomark"></span>
                    </label>
                    <label class="radio-container select-container">Years
                        <input type="radio" id="time-years" name="timeFormat" value="Years">
                        <span class="radiomark"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Goal: *</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="goal" required></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Start date: *</label>
            <div class="col-sm-10">
                <input type="date" id="start-date" class="form-control" name="startDate" value="startDate" required>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="description"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Milestones:
                <button id="add-milestone">Add a milestone</button>
            </label>
            <div class="col-sm-10">
                <div id="milestones"></div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Resources:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="resources"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Thoughts:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="thoughts"></textarea>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="challenge-btn">Create</button>
        </div>
    </form>
</div>
