<h2 class="text-center">Create a new challenge</h2>
<div>
    <form action="/challenges/new" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Category:</label>
            <div class="col-sm-10">
                <input type="checkbox" id="education" name="category" value="Education"> Education
                <input type="checkbox" id="sports" name="category" value="Sports"> Sports
                <input type="checkbox" id="arts" name="category" value="Arts"> Arts
                <input type="checkbox" id="entertainment" name="category" value="Entertainment"> Entertainment
                <input type="checkbox" id="self-care" name="category" value="Self-care"> Self-care
                <input type="checkbox" id="health" name="category" value="Health"> Health
                <input type="checkbox" id="other" name="category" value="Other"> Other
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Time:</label>
            <div class="col-sm-10">
                <div>
                <input type="number" class="form-control" id="time-number" name="timeNumber" placeholder="Insert a number">
                </div>
                <div>
                <input type="radio" id="time-days" name="timeFormat" value="Days"> Days
                <input type="radio" id="time-weeks" name="timeFormat" value="Weeks"> Weeks
                <input type="radio" id="time-months" name="timeFormat" value="Months"> Months
                <input type="radio" id="time-years" name="timeFormat" value="Years"> Years
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Goal:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="goal"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Start date:</label>
            <div class="col-sm-10">
                <input type="date" id="start-date" class="form-control" name="startDate" value="startDate">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="description"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Milestones:
                <button id="add-milestone">Add a milestone</button>
            </label>
            <div class="col-sm-10">
                <div id="milestones"></div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Resources:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="resources"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Thoughts:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" name="thoughts"></textarea>
            </div>
        </div>
        {{!-- <div class="form-group row">
            <label>
                Do you want to track your daily efforts?
                <input type="radio" id="daily-yes" name="dailyEfforts" value="Yes">Yes
                <input type="radio" id="daily-no" name="dailyEfforts" value="No">No
            </label>
        </div> --}}
        <div class="text-center">
            <button type="submit" class="challenge-btn">Create</button>
        </div>
    </form>
</div>
