<h2>Create your challenge</h2>
<form action="/challenges/new" method="POST">
    <label>
        Category:
        <input type="checkbox" id="education" name="category">Education
        <input type="checkbox" id="sports" name="category">Sports
        <input type="checkbox" id="arts" name="category">Arts
        <input type="checkbox" id="entertainment" name="category">Entertainment
        <input type="checkbox" id="self-care" name="category">Self-care
        <input type="checkbox" id="health" name="category">Health
        <input type="checkbox" id="other" name="category">Other
    </label>
    <br>
    <label>
        Time:
        <input type="number" id="time-number" name="timeNumber">
        <br>
        <input type="radio" id="time-days" name="timeFormat">Days
        <input type="radio" id="time-weeks" name="timeFormat">Weeks
        <input type="radio" id="time-months" name="timeFormat">Months
        <input type="radio" id="time-years" name="timeFormat">Years
    </label>
    <br>
    <label>
        Goal:
        <textarea type="text" name="goal"></textarea>
    </label>
    <br>
    <button type="submit">Create!</button>
</form>
